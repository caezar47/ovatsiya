{% if view == "services" %}
	{% for value in list %}		
	<div class="{{prefix}}item  {{mod}}"  {% if card_aos %}data-aos="{{card_aos}}" {% if value.delay %}data-aos-delay="{{value.delay}}"{% endif %}{% endif %}>
		<picture class="{{prefix}}wrap  {{mod}}">
			<a href="{{value.link}}" class="{{prefix}}preview  {{mod}}">	
				<img src="{{value.preview}}" class="img-responsive" alt="{{value.heading}}">
			</a>
		</picture>
		<p class="{{prefix}}heading  {{mod}}"><a href="{{value.link}}">{{value.heading}}</a></p>
		{% if value.cost %}
		<p class="{{prefix}}cost  {{mod}}">{{value.cost}}</p>
		{% endif %}
		{% if value.modal %}
			<button type="button" data-toggle="modal" data-target="#{{value.modal}}" class="btn__item">запись онлайн</button>
		{% else %} 
			<a href="{{value.link}}" class="btn__item">подробнее</a>
		{% endif %} 
	</div> 
	{% endfor %}
{% endif %}

{% if view == "reviews" %}
	{% for value in list %}		
	<div class="{{prefix}}item  {{mod}}" id="card{{loop.index}}">
		<picture class="{{prefix}}preview  {{mod}}">
			<img src="{{value.preview}}" class="img-responsive" alt="{{value.heading}}">
		</picture>
		<div class="{{prefix}}wrap  {{mod}}">
			<p class="{{prefix}}heading  {{mod}}">{{value.heading}}</p> 
			<div class="{{prefix}}note  {{mod}}">{{value.note}}</div> 
			{% if value.link %}<a href="{{value.link}}#card{{loop.index}}" class="{{prefix}}link  {{mod}}">подробнее →</a>{% endif %}
		</div> 
	</div> 
	{% endfor %}
{% endif %}

