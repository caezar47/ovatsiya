        {% include "../block/common/navbar/navbar.twig" with {
            navbar_prefix:"navbar__", 
            navbar_mod:"is--scroll",
            active:page.reviews,
        } %}

        <main class="{{prefix.section}}wrap">
            {% include "../block/page/reviews.twig" with {
                view:"page", 
                prefix:prefix.section, 
                mod:"is--page-reviews", 
                heading_group:"", 
                heading_mod:"is--h2  is--page-reviews", 
                heading_level:"h1", 
                heading:"Отзывы",
                
                bg_left:[path.img,"/default/bg-team-left.png"].join(''),
                bg_bottom:[path.img,"/default/bg-team-bottom.png"].join(''),

